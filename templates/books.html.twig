<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>

    <main>

    {% for book in books %}
        {% if book.publishedAt %}

        <article>
            <a href="{{ path('book', {"id": book.id}) }}"><img width="400px" src="{{ book.image }}" alt="{{ book.title }}"></a>
            <h2>{{ book.title }}</h2>
            <h3>{{ book.author }}</h3>
            <p>{{ book.synopsis }}</p>
            <em> Published on :{{ book.publishedAt | date ('m/d/y') }}</em>
        </article>

        {% endif %}
    {% endfor %}

    </main>


</body>
</html>