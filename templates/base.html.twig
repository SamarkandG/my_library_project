<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <title>Document</title>
</head>
<body>
<header>
    <nav class="navbar">
        <ul style="list-style: none">
            <li><a href="{{ path('home') }}">Home</a></li>
            <li><a href="{{ path('admin_books') }}">Books</a></li>
            <li><a href="{{ path('admin_authors') }}">Authors</a></li>

        {% if app.user.email %}
            <li ><p><i>Vous êtes connecté en tant que</i> <strong>{{ app.user.email }}</strong></p></li>
                <li><a href="{{ path('app_logout') }}">Log Out</a></li>

        {% else %}
                <li><a href="{{ path('login_page') }}">Log In</a></li>
        {% endif %}


        </ul>

        <form action="{{ path('admin_search_books') }}">
            <input type="text" name="q">
            <input type="submit">
        </form>
    </nav>
</header>


    {% block main %}{% endblock main %}
{# si des messages flashes de type 'success' ont été ajoutés, on les affiche #}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}

<footer class="footer">
    <ul style="list-style: none">
        <li><a href="{{ path('home') }}">Home</a></li>
        <li><a href="{{ path('admin_books') }}">Books</a></li>
        <li><a href="{{ path('admin_authors') }}">Authors</a></li>

    </ul>
</footer>

</body>
</html>